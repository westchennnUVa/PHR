<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mating.phr.Chronic"
    android:background="@drawable/beijing">
    <ImageView
        android:id="@+id/imageViewchronic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/manxingbintitle"
        android:scaleType="fitXY"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewchronic">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/manxingbing1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/manxingbing1"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/manxingbing2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/manxingbing2"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/manxingbing3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/manxingbing3"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/manxingbing4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/manxingbing4"
                android:scaleType="fitXY"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>

