<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mating.phr.Mentality"
    android:background="@drawable/beijing">
    <ImageView
        android:id="@+id/imageViewmentality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/xinlititle"
        android:scaleType="fitXY"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewmentality">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/mentality1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/xinli1"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/mentality2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/xinli2"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/mentality3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/xinli3"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/mentality4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/xinli4"
                android:scaleType="fitXY"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>

