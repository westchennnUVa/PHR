<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainUserPageFragment"
    android:background="@drawable/beijing">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/mainuserpage"
        android:scaleType="fitXY"
        />
<RelativeLayout
    android:id="@+id/rllay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/imageView1">
    <ScrollView
        android:id="@+id/sc1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/item1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/item3"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/item2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/item2"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/item3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/item4"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/item4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/item5"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/item5"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/item6"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/item6"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/item1"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/item7"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/item7"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/item8"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/item8"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/item9"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/item9"
                android:scaleType="fitXY"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/xiaobiao1"
        android:scaleType="fitXY"/>
</RelativeLayout>
