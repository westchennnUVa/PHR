<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mating.phr.Regimen"
    android:background="@drawable/beijing">
    <ImageView
        android:id="@+id/imageViewregime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/yangshengtitle"
        android:scaleType="fitXY"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewregime">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/yangsheng1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/yangsheng1"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/yangsheng2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/yangsheng2"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/yangsheng3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/yangsheng3"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/yangsheng4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/yangsheng4"
                android:scaleType="fitXY"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
