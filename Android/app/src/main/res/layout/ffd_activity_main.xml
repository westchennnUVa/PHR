<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.crazyit.ui.MainActivity">

    <ImageView
        android:layout_width="140dip"
        android:layout_height="150dip"
        android:layout_marginLeft="20dip"
        android:id="@+id/imageView"
        android:src="@drawable/ffd_asdf"
        android:onClick="clickOfRecent_Record"
        android:layout_above="@+id/textView"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="140dip"
        android:layout_height="150dip"
        android:layout_marginRight="20dip"
        android:id="@+id/imageView2"
        android:src="@drawable/ffd_t"
        android:onClick="clickOfDr_list"
        android:layout_above="@+id/textView2"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="140dip"
        android:layout_height="150dip"
        android:layout_marginRight="20dip"
        android:id="@+id/imageView4"
        android:src="@drawable/ffd_ee"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/imageView"
        android:onClick="myreturn"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="所有医生列表"
        android:id="@+id/textView"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="我的医生列表"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/textView"
        android:layout_alignStart="@+id/imageView2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="返回"
        android:id="@+id/textView4"
        android:layout_below="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:layout_alignEnd="@+id/imageView4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/imageView2">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView5"
            android:src="@drawable/ffdffd"
            android:scaleType="fitXY"/>
    </LinearLayout>


</RelativeLayout>
