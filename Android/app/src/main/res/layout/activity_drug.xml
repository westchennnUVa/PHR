<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mating.phr.Drug"
    android:background="@drawable/beijing">
<ImageView
    android:id="@+id/imageViewdrug"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@drawable/yaopintitle"
    android:scaleType="fitXY"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewdrug">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <ImageView
            android:id="@+id/yaopinitem1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/yaoping1"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/yaopinitem2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/yaoping2"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/yaopinitem3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/yaoping3"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/yaopinitem4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/yaoping4"
            android:scaleType="fitXY"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
