<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mating.phr.Sport"
    android:background="@drawable/beijing">
    <ImageView
        android:id="@+id/imageViewsport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/yundongtitle"
        android:scaleType="fitXY"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewsport">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/yundong1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/yundong1"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/yundong2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/yundong2"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/yundong3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/yundong3"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/yundong4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/yundong4"
                android:scaleType="fitXY"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>

