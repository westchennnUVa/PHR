<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.anthonysss.ui.My_Data">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/fc_background_above"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/button_mine" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView2"
        android:layout_marginLeft="62dp"
        android:layout_marginStart="62dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/border"
        android:src = "@drawable/touxiang"
        android:padding="2dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="千手柱间"
        android:textSize="50px"
        android:id="@+id/textView7"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_marginLeft="58dp"
        android:layout_marginStart="58dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="VIP"
        android:textSize="50px"
        android:id="@+id/textView8"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <Button
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:background="#282831"
        android:textColor="#ffffffff"
        android:id="@+id/button_home"
        android:drawableTop="@drawable/fc_home"
        android:layout_gravity="left|bottom"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/button_personal"
        android:layout_toStartOf="@+id/button_personal" />

    <Button android:id="@+id/button_personal"
        android:background="#282831"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:textColor="#ffffffff"
        android:drawableTop="@drawable/fc_personal"
        android:layout_gravity="left|bottom"
        android:layout_alignTop="@+id/button_home"
        android:layout_toLeftOf="@+id/button_healthy_community"
        android:layout_toStartOf="@+id/button_healthy_community" />

    <Button android:id="@+id/button_mine"
        android:background="#282831"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:textColor="#ffffffff"
        android:drawableTop="@drawable/fc_mine"
        android:layout_gravity="right|bottom"
        android:layout_alignTop="@+id/button_healthy_community"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button android:id="@+id/button_healthy_community"
        android:background="#282831"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:textColor="#ffffffff"
        android:drawableTop="@drawable/fc_healthy_community"
        android:layout_alignTop="@+id/button_personal"
        android:layout_toLeftOf="@+id/button_mine"
        android:layout_toStartOf="@+id/button_mine" />


</RelativeLayout>
